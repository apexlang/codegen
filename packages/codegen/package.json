{
  "name": "@apexlang/codegen",
  "version": "0.0.17",
  "description": "Apex built-in code generators",
  "keywords": [
    "apex",
    "idl",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://www.github.com/apexlang/codegen"
  },
  "author": "Apex contributors",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "type": "module",
  "module": "./dist/index.js",
  "types": "./src/index.ts",
  "engines": {
    "node": ">=14.0"
  },
  "files": [
    "dist",
    "README.md",
    "test",
    "src",
    "templates",
    "*.js",
    "*.d.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "devbuild": "npm run format:fix && npm run build && apex install file:.",
    "codegen": "node scripts/gen_bundle.cjs",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "shx rm -rf dist",
    "test": "npm run test:unit && npm run test:snapshot",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:snapshot": "cd testdata && ./diffcheck.sh",
    "apex-install": "npm run format:fix && npm run clean && npm run build && apex install file:.",
    "style": "npm run format -- --list-different && npm run lint",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,css,scss,sass,less,md}\"",
    "format:fix": "npm run format -- --write",
    "lint": "eslint -c ./config/.eslintrc.json src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prerelease": "npm run build"
  },
  "dependencies": {
    "@apexlang/cs": "file:../cs",
    "@apexlang/go": "file:../go",
    "@apexlang/json-schema": "file:../json-schema",
    "@apexlang/openapiv3": "file:../openapiv3",
    "@apexlang/proto": "file:../proto",
    "@apexlang/python": "file:../python",
    "@apexlang/rest": "file:../rest",
    "@apexlang/rust": "file:../rust",
    "@apexlang/typescript": "file:../typescript",
    "@apexlang/utils": "file:../utils"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "@types/node": "^18.7.23",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.22.0",
    "jest": "^29.1.1",
    "prettier": "^2.2.1",
    "shx": "0.3.3",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.9.3"
  }
}